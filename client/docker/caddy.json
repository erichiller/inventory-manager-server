{
    "admin": {
        // "disabled": true
    },
    "logging": {
        "sink": {
            "writer": {
                "output":"stderr"
            }
        },
        "logs": {
            "default": {
                //"writer": {
	            //    "output": "file",
	            //    "filename": "",
	            //    "roll": false,
	            //    "roll_size_mb": 0,
	            //    "roll_gzip": false,
	            //    "roll_local_time": false,
	            //    "roll_keep": 0,
	            //    "roll_keep_days": 0
                //},
                "writer": {
                    "output": "stdout"
                },
                "encoder": {
                    "format": "console"
                },
                // DEBUG, INFO, WARN, ERROR, PANIC, and FATAL
                "level": "INFO"
            }
        }
    },
    "storage": {
        "module": "file_system",
        "root": "{env.DATA_DIRECTORY}"
    },
    "apps": {
        "http": {
	        //"http_port": 80,
	        //"https_port": 443,
            "servers": {
                "web": {
                    "automatic_https": {
                        // "disable_redirects": true
                    },
                    "listen": [
                        ":80",
                        ":443"
                    ],
                    "routes": [
                        {
                            "handle": [
                                {
                                    "handler": "vars",
                                    "root": "{env.APP_DIRECTORY}"
                                }
                            ]
                        },
                        {
                            "match": [
                                {
                                    "host": [
                                        "{env.WEB_DOMAIN}"
                                    ],
                                },
                                {
                                    "file": {
                                        "try_files": [
                                            "{http.request.uri.path}",
                                            "/index.html"
                                        ]
                                    }
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "rewrite",
                                    "uri": "{http.matchers.file.relative}"
                                }
                            ]
                        },
                        {
                            "handle": [
                                {
                                    "handler": "file_server"
                                }
                            ]
                        }
                    ],
                    
			        "logs": {
				        "default_logger_name": "default"
			        }
                }
            }
        },
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "{env.WEB_DOMAIN}"
                        ],
                        "issuers": [
                            {
                                "challenges": {
                                    "dns": {
                                        "resolvers": [
                                            "8.8.8.8",
                                            "ns-41-a.gandi.net",
                                            "ns-103-b.gandi.net",
                                            "ns-191-c.gandi.net",
                                            "{env.AUX_DNS}"
                                        ],
                                        "provider": {
                                            "api_token": "{env.GANDI_API_KEY}",
                                            "name": "gandi"
                                        }
                                    }
                                },
                                "module": "acme",
                                "ca": "{env.TLS_CA_URL}",
                                "email": "{env.TLS_CA_EMAIL}"
                            }
                        ]
                    }
                ]
            }
        }
    }
}