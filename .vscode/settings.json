{
    "cmake.configureOnOpen": false,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/yarn.lock": true,
        "**/graphql.tsx": true,
        "**/schema.graphql": true, 
        "**/client/stats/**": true,
        "**/*.ops.*": true
    },
    "eslint.format.enable": true,
    "eslint.alwaysShowStatus": true,
    "eslint.debug": true,
    // Associate schemas to JSON files in the current project
    "json.schemas": [
        {
            // "fileMatch": [
            //     // "./client/src/lib/item/**/*.json",
            //     // "./client/src/lib/item/ItemHardwareFastenerBolt/ScrewSizeOptions.json",
            //     // "./src/**/*.json"
            //     "/client/src/lib/item/ItemHardwareFastenerBolt/ScrewSizeOptions.json"
            //     // "./client/src/lib/item/**.json"
            // ],
            // "url": "./client/src/lib/types/schema.json"
            "fileMatch": ["caddy*.json"],
            "url": "./client/docker/caddy_schema.json"
        }
    ],
    "files.associations": {
        "**/client/src/lib/item/*.json": "jsonc",
        "**/caddy*.json": "jsonc"
    },
    "svg.preview.background": "transparent",
}